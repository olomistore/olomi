rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Qualquer pessoa pode ler os produtos. Apenas administradores podem escrever.
    match /products/{productId} {
      allow read: if true;
      allow write: if get(/databases/$(database)/documents/roles/$(request.auth.uid)).data.admin == true;
    }

    // Utilizadores só podem ler e escrever no seu próprio documento de perfil.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Utilizadores podem criar pedidos e ler APENAS os seus próprios pedidos.
    // Administradores podem ler, atualizar e apagar qualquer pedido.
    match /orders/{orderId} {
      allow read: if request.auth.uid == resource.data.userId || get(/databases/$(database)/documents/roles/$(request.auth.uid)).data.admin == true;
      allow create: if request.auth.uid != null;
      allow update, delete: if get(/databases/$(database)/documents/roles/$(request.auth.uid)).data.admin == true;
    }

    // Utilizadores podem ler a sua PRÓPRIA função (role).
    // Administradores podem ler e escrever em qualquer função.
    match /roles/{userId} {
      allow read: if request.auth.uid == userId || get(/databases/$(database)/documents/roles/$(request.auth.uid)).data.admin == true;
      allow write: if get(/databases/$(database)/documents/roles/$(request.auth.uid)).data.admin == true;
    }
  }
}

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Os produtos podem ser lidos por qualquer pessoa.
    match /products/{productId} {
      allow read: if true;
      // Apenas administradores podem criar, atualizar ou apagar produtos.
      allow write: if request.auth != null && 
                     get(/databases/$(database)/documents/roles/$(request.auth.uid)).data.admin == true;
    }

    // Um utilizador só pode ler a sua própria função (role).
    // Isto é necessário para que as regras de segurança do Storage funcionem.
    match /roles/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      // Ninguém (exceto através de uma Cloud Function ou da consola) pode alterar funções.
      allow write: if false;
    }

    // Apenas administradores podem ler e escrever na coleção de pedidos.
    match /orders/{orderId} {
      allow read, write: if request.auth != null && 
                     get(/databases/$(database)/documents/roles/$(request.auth.uid)).data.admin == true;
    }

  }
}

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Os produtos podem ser lidos por qualquer pessoa.
    match /products/{productId} {
      allow read: if true;
      // Apenas administradores podem criar, atualizar ou apagar produtos.
      allow write: if request.auth != null && 
                     get(/databases/$(database)/documents/roles/$(request.auth.uid)).data.admin == true;
    }

    // TESTE DE DIAGNÓSTICO FINAL:
    // Temporariamente, permitir que qualquer utilizador AUTENTICADO leia QUALQUER documento de role.
    // Isto vai desbloquear a chamada `get()` da regra do Storage.
    match /roles/{userId} {
      allow read: if request.auth != null;
      allow write: if false; // Manter a escrita bloqueada por segurança.
    }

    // Regras de pedidos a serem definidas no futuro.
    match /orders/{orderId} {
      allow read, write: if false;
    }

  }
}

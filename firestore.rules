rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      return get(/databases/$(database)/documents/roles/$(request.auth.uid)).data.admin == true;
    }

    // Regras para a coleção 'users': [TEMPORARIAMENTE ABERTO]
    match /users/{userId} {
      // PERMITE que qualquer utilizador autenticado escreva para poder criar o primeiro admin.
      allow read, write: if request.auth != null;
    }

    // Regras para a coleção 'roles': [TEMPORARIAMENTE ABERTO]
    match /roles/{userId} {
      // PERMITE que qualquer utilizador autenticado escreva para poder criar o primeiro admin.
      allow read, write: if request.auth != null;
    }

    match /products/{productId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    match /orders/{orderId} {
        allow create: if request.auth != null;
        allow read: if request.auth.uid == resource.data.userId || isAdmin();
        allow update: if isAdmin();
    }
  }
}

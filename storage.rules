rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Permite que qualquer pessoa leia as imagens dos produtos
    match /products/{productId}/{imageName} {
      allow read: if true;
    }

    // Apenas administradores autenticados podem escrever (upload, update, delete)
    // na pasta de produtos.
    match /products/{productId}/{allPaths=**} {
      allow write: if request.auth != null && 
                      firestore.get(/databases/(default)/documents/roles/$(request.auth.uid)).data.admin == true;
    }
  }
}

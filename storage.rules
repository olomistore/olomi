rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // ✅ REGRA CORRIGIDA: Permite a leitura pública de TODOS os ficheiros dentro 
    // da pasta de um produto específico (imagens originais e todas as versões otimizadas).
    match /products/{productId}/{allPaths=**} {
      allow read: if true;
    }

    // Apenas administradores autenticados podem escrever (upload, update, delete)
    // na pasta de produtos.
    match /products/{productId}/{imageName} {
        allow write: if request.auth != null && 
                        firestore.get(/databases/(default)/documents/roles/$(request.auth.uid)).data.admin == true;
    }
  }
}

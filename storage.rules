rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // As imagens de produtos podem ser lidas por qualquer pessoa.
    match /products/{productId}/{imageName} {
      allow read: if true;
    }

    // Um administrador autenticado pode escrever qualquer ficheiro na pasta de produtos.
    match /products/{productId}/{imageName} {
        allow write: if request.auth != null && 
                        firestore.get(/databases/(default)/documents/roles/$(request.auth.uid)).data.admin == true;
    }

    // ✅ REGRA ADICIONADA: Permite que a extensão "Resize Images" escreva as imagens 
    // otimizadas. A regra verifica se o nome do ficheiro corresponde ao padrão gerado pela extensão.
    match /products/{productId}/{resizedImage} {
      allow write: if resizedImage.matches('.*_400x400\\.webp$');
    }
  }
}
